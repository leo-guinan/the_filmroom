{
  "$schema": "https://flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production Environment", 
      "region": "us-east-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "postgres",
          "name": "postgres",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "16",
          "instanceSize": "db.t4g.micro",
          "storage": 20,
          "private": false,
          "deletionProtection": false,
          "databaseName": "filmroom_db",
          "databaseUser": "filmroom"
        },
        {
          "id": "backend",
          "name": "Backend API",
          "type": "web",
          "buildType": "nixpacks",
          "source": {
            "path": "/"
          },
          "target": {
            "type": "fargate"
          },
          "ci": {
            "type": "codebuild"
          },
          "cpu": 0.5,
          "memory": 2,
          "port": 8000,
          "healthCheckPath": "/health",
          "buildCommand": "cd backend && /opt/venv/bin/pip install -e .",
          "startCommand": "bash /app/backend/startup.sh",
          "minInstances": 1,
          "maxInstances": 3,
          "customDomains": [
            {
              "name": "coachapi.leoasaservice.com"
            }
          ],
          "envVariables": {
            "DATABASE_URL": {
              "fromService": {
                "id": "postgres",
                "value": "dbConnectionString"
              }
            },
            "APP_ENV": "production",
            "SECRET_KEY": "change-this-to-a-secure-random-string-in-production",
            "CORS_ORIGINS": "https://filmroom.leoasaservice.com,https://coachapi.leoasaservice.com,https://d2i2sf9vq7cc6e.cloudfront.net,https://d1wbmmojehnr8o.cloudfront.net,http://localhost:3000",
            "CORS_ALLOW_CREDENTIALS": "true",
            "CORS_ALLOW_METHODS": "GET,POST,PUT,DELETE,OPTIONS,PATCH",
            "CORS_ALLOW_HEADERS": "*"
          }
        },
        {
          "id": "frontend",
          "name": "Frontend Web App",
          "type": "web",
          "buildType": "nixpacks",
          "source": {
            "path": "/"
          },
          "target": {
            "type": "fargate"
          },
          "ci": {
            "type": "codebuild"
          },
          "cpu": 0.5,
          "memory": 2,
          "port": 3000,
          "buildCommand": "pnpm install --frozen-lockfile && cd frontend && pnpm exec next build",
          "startCommand": "cd frontend && pnpm exec next start",
          "minInstances": 1,
          "maxInstances": 3,
          "customDomains": [
            {
              "name": "filmroom.leoasaservice.com"
            }
          ],
          "environmentVariables": {
            "NEXT_PUBLIC_API_URL": "https://coachapi.leoasaservice.com"
          }
        }
      ]
    }
  ]
}